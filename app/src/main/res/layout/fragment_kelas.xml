<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentKelasIndonesia"
    android:background="@color/utama">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_pilih_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PILIH KELAS"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_basa_basi_pilih_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sebelum masuk materi, pilih kelas dulu ya.."
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pilih_kelas"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kelas_vii"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="KELAS VII"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_basa_basi_pilih_kelas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/utama2"
            android:textColor="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kelas_viii"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="KELAS VIII"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_kelas_vii"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/utama2"
            android:textColor="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kelas_ix"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="KELAS IX"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_kelas_viii"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/utama2"
            android:textColor="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>